{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Menu",
    "description": "The Menu",
    "required": ["name", "description", "company_id"],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the Menu."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name of the Menu."
        },
        "cover_url": {
            "$id": "#/properties/cover_url",
            "type": "string",
            "title": "The cover_url of the Menu."
        },
        "active": {
            "$id": "#/properties/active",
            "type": "boolean",
            "title": "The active status of the Menu."
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description of the Menu.",
            "examples": ["some short desc of the action taken by the"]
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date when the ticket was created."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date when the ticket was updated."
        },
        "deleted_at": {
            "$id": "#/properties/deleted_at",
            "type": "string",
            "title": "The date when the Menu was deleted."
        }
    }
}
